<!-- Contact Page -->

<div class="row">
  <div class="col-md-6 col-md-offset-3">

    <div class="panel panel-success">
      <div class="panel-heading">
        <h4><strong>Contact</strong></h4>
      </div><!-- / panel-heading -->

      <div class="panel-body">
        <%= form_tag("/static_pages/thank_you") do %>

            <div class="form-group">
              <%= label_tag :name, "Name:" %>
              <%= text_field_tag :name, nil, class: "form-control", placeholder: "Enter Name" %>
            </div>
            <div class="form-group">
              <%= label_tag :email, "Email Address:" %>
              <%= text_field_tag :email, nil, class: "form-control", placeholder: "Enter Email" %>
            </div>
            <div class="form-group">
              <%= label_tag :message, "Message:" %>
              <%= text_area_tag :message, nil, class: "form-control", placeholder: "Enter Message" %>
            </div>
            <%= submit_tag "Send", class: "btn btn-primary form-search" %>

        <% end %>
      </div><!-- / panel-body -->

      <div class="panel-footer">
        <p>Looking forward to receiving feedback!</p>
      </div><!-- / panel-footer -->

    </div><!-- / panel -->

  </div>
</div>
