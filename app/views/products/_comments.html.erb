<div class="container-fluid">

  <div>
    <div class="product-reviews">
      <h4>Customer Reviews...</h4>
      <p>
        <strong>Average Rating:</strong>
        ( &nbsp
        <%= pluralize(@product.total_rating.to_f, "customer review") %>
        &nbsp )
      </p>
      <div id="average-rating2" class="rated rated-average" data-score="<%= @product.average_rating %>">
      </div>
    </div>
    <hr>
    <div class="page_info">
      <%= page_entries_info @comments %>
    </div>

    <hr>
    <!-- Pagination page indexing -->
    <div class="row pagination-wrap">
      <ul class="pagination">
        <%= will_paginate @comments %>
      </ul>
    </div><!-- /.pagination-wrap -->


    <div class="row bg-info">
      <div class="col-xs-12 col-sm-12 col-md-12 col-lg-12">
        <!-- Class is unique. Used by Create.js.erb AJAX -->
        <div class="comments-block--individual">
          <% @comments.each do |comment| %>
            <!-- Individual Comment. -->
            <%= render partial: 'comments/comment', locals: {comment: comment}  %>
          <% end %>
        </div> <!-- /comments-block-individual -->
      </div> <!-- /col -->


    </div> <!-- /row -->
  </div> <!-- /product-reviews -->

  <!-- Pagination page indexing -->
  <div class="row pagination-wrap">
    <ul class="pagination">
      <%= will_paginate @comments %>
    </ul>
  </div><!-- /.pagination-wrap -->

</div><!-- /container-fluid -->
