<div class="container-fluid">  

  <div>
    <div class="product-reviews">
      <h4>Customer Reviews...</h4>
      <div class="rated rated-average" data-score="<%= @product.average_rating %>">
        <strong>Average Rating:</strong> 
        ( &nbsp 
        <%= pluralize(@product.total_rating.to_f, "customer review") %> 
        &nbsp )
      </div>
    </div>
    <hr>
    <div class="page_info">
      <%= page_entries_info @comments %>
    </div>

    <hr>
    <%= will_paginate @comments %>
    
    <div class="row bg-info">
      <div class="col-xs-12 col-sm-12 col-md-12 col-lg-12">
        <div class="comments-block--individual">
          <% @comments.each do |comment| %>        
            <!-- Individual Comment. -->
            <div>
              <hr>
              <p>
                <%= comment.user.first_name %> &nbsp 
                <small><em>
                  <%= "#{ time_ago_in_words(comment.created_at)} ago" %>
                </em></small> &nbsp
                <% if signed_in? && current_user.admin? %>
                  <%= link_to ('<span class="glyphicon glyphicon-remove"></span>').html_safe, product_comment_path(@product, comment), method: :delete, data: { confirm: 'Are you sure?' }%>
                <% end %>  
              </p>
              <div class="rated" data-score="<%= comment.rating %>"></div>     
              <p><%= comment.body %></p>
            </div><!-- /Indv. Comment. -->  
          <% end %>
        </div> <!-- /comments-block-individual -->  
      </div> <!-- /col -->  
            
      
    </div> <!-- /row -->  
  </div> <!-- /product-reviews --> 

  <%= will_paginate @comments%>

</div><!-- /container-fluid -->   
  
