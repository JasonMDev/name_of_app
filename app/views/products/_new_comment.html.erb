<% if signed_in? %>
  <h4>Add a review:</h4>

  <div class="row">
    <div class="col-xs-12 col-sm-12 col-md-12 col-lg-12 bg-info product-review-overall-rating">    
      <%= form_for([@product, @product.comments.build], remote: true) do |f| %>      

        <div class="field">
          <%= f.label :body, "Comments" %><br>
          <%= f.text_area :body, class: 'form-control' %>
        </div>

        <div class="field rating">
          <%= f.label :rating %><br>
        </div>

        <div class="actions">
          <%= f.submit "Save", class: "btn btn-success" %>
        </div>

      <% end %>
    </div>
  </div>
<% end %>
