<div ng-controller="OrdersCtrl">
  <h1>Listing Orders</h1>

  
  <hr>
  <form class="form-horizontal" ng-submit="addOrder()">
    <div class="form-group">
      <div class="form-group">
        <strong>Add order:  </strong>
        <hr>
      </div>  

      <div class="form-group">
        <label >Order Id.: </label>
        <input type="number" class="form-control" value="{{orders[orders.length - 1].id + 1 }}" ng-model="newOrder.id">
      </div>  

      <div class="form-group">
        <label >Order Total: </label>
        <input type="number" class="form-control" step="0.01" class="form-control" placeholder="Total" ng-model="newOrder.total">
      </div>  
      
      <div class="form-group">
        <label > Select a product</label>
        <select ng-model="newOrder.product_id" class="form-control">
          <option value="" disabled selected>Select a product</option>
          <option ng-repeat="product in products" value="{{product.id}}">{{product.name}}</option>
        </select>
      </div>

      <div class="form-group">
        <label >User: </label>
        <input type="number" ng-model="newOrder.user_id" value="{{user.id}}">{{user.email}}
      </div>   
      
      <input type="submit" class="btn btn-success" value="Add" >

    </div>
  </form>
  <hr>




  <!-- Order Table -->
  <table class="table table-hover">

    <!-- Order Table  Header -->
    <thead>
      <td><strong>Order ID</strong></td>
      <td><strong>Total</strong></td>
      <td><strong>Product</strong></td>
      <td></td>
    </thead>

    <!-- Order Table Rows with Information -->
    <tbody>
      <tr ng-repeat="order in orders | orderBy:'-id':reverse">
        <td>
          {{ order.id }}
          <small ng-show="order.user.email"><br>-{{ order.user.email }}</small>
        </td>
        <td>
          <strong>{{ order.total | currency : "Â£" }}</strong>
        </td>
        <td>
          {{ order.product.name }}
        </td>
        <td>
          <button ng-click="deleteOrder(order)" class="btn btn-danger btn-sm"><span class="glyphicon glyphicon-trash" aria-hidden="true"></span></button>
        </td>
      </tr>
    </tbody>

  </table>



</div> <!-- /Orders COntroller -->




