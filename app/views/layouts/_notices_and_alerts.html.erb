<% flash.each do |message_type, message| %>
  <% logger.debug "Message Type: #{message_type}"%>
  <% logger.debug "Message: #{message}"%>
  <% alert_type = 'success' if message_type === 'notice' %>
  <% alert_type = 'danger' if message_type === 'alert' %>
  <!-- Other bootstrap options -->
  <% alert_type = 'info' if message_type === 'XXXX' %>
  <% alert_type = 'warning' if message_type === 'XXXXX' %>
  <div id="<%= message_type %>" class="alert alert-<%= alert_type %>"><%= message %></div>
  <!-- <%= content_tag(:div, message, class: "alert alert-#{message_type}") %> -->  
<% end %>