<!DOCTYPE html>
<html>
  <head>
    <title>BikeBasingstokeRailsDemo</title>
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.6/css/bootstrap.min.css">
    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.6/js/bootstrap.min.js"></script>
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <%= csrf_meta_tags %>
    <%= render 'layouts/shim' %>
  </head>
  <body>
    <!-- Header -->
    <%= render 'layouts/header' %>

    <!-- Body -->
    <div class="container">

      <!-- Devise "notices" and "alerts" -->      
      <% flash.each do |message_type, message| %>
        <% alert_type = 'success' if message_type === 'notice' %>
        <% alert_type = 'danger' if message_type === 'alert' %>
        <div id="<%= message_type %>" class="alert alert-<%= alert_type %>"><%= message %></div>  
      <% end %>
      
      <!-- Normal Body -->        
      <%= yield %>
      
      <!-- Footer -->
      <%= render 'layouts/footer' %>
      
    </div>

    
  </body>
</html>
